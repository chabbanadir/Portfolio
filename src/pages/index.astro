  <!-- Collapsible Section for Stacks -->
  <section class="py-8 bg-gray-50">
    <div class="max-w-5xl mx-auto px-4">
      <!-- Section Header -->
      <div
        id="toggle-stacks"
        class="flex justify-between items-center cursor-pointer bg-blue-100 p-4 rounded-lg"
      >
        <h2 class="text-2xl font-bold text-blue-500">Frameworks et Librairies </h2>
        <span id="toggle-icon" class="text-xl font-semibold">+</span>
      </div>

      <!-- Collapsible Content -->
      <div id="stacks-content" class="hidden text-center mt-4">
        <Stacks data={backendData} title="Back-end" />
        <Stacks title="Frontend" data={frontendData} />
        <Stacks data={databaseData} title="DataBase" />
        <Stacks data={devopsData} title="DevOps" />
      </div>
    </div>
  </section>
  <Footer />
  <!-- Add JavaScript for Collapsible Logic -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const toggleButton = document.getElementById('toggle-stacks');
      const stacksContent = document.getElementById('stacks-content');
      const toggleIcon = document.getElementById('toggle-icon');

      if (toggleButton && stacksContent && toggleIcon) {
        toggleButton.addEventListener('click', () => {
          if (stacksContent.classList.contains('hidden')) {
            stacksContent.classList.remove('hidden');
            toggleIcon.textContent = '-'; // Change to collapse icon
          } else {
            stacksContent.classList.add('hidden');
            toggleIcon.textContent = '+'; // Change to expand icon
          }
        });
      }
    });
  </script>
</Layout>
